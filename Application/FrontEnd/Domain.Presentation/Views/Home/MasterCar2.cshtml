@{
    ViewBag.Title = "MasterCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mstCarVue">
    <div class="block-header">
        <h2>Ini sample CRUD buat master car</h2>
    </div>

    <div class="row clearfix divAdd">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Yuuuu Coba diinput yuuuu <b>[CREATE]</b> </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action 1</a></li>
                                <li><a href="javascript:void(0);">Action 2 Kalo ada</a></li>
                                <li><a href="javascript:void(0);">Action 3 ya kalo ada juga, jangan dipaksain kalo nggak ada</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <form id="formAnjay" role="form" v-on:submit.prevent="validateBeforeSubmit">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="Name" v-model="form.Name" v-validate="'required|min:3|max:10'">
                                <label class="form-label">Name</label>
                            </div>
                            <div class="help-info">Min. 3, Max. 10 characters</div>
                            <p class="text-danger" v-if="errors.has('Name')">{{ errors.first('Name') }}</p>
                        </div>
                        <div class="form-group">
                            <div class="form-line">
                                <vuejs-datepicker class="form-control" placeholder="Select Date......" v-model="form.CreatedDate" v-validate="'required|date_format:YYYY-MM-DD'" name="Date"></vuejs-datepicker>
                            </div>
                            <div class="help-info">Formatnya ini bro : YYYY-MM-DD</div>
                            <p class="text-danger" v-if="errors.has('Date')">{{ errors.first('Date') }}</p>
                        </div>
                        <button class="btn btn-primary waves-effect" type="submit">Click button ini bro kalau mau save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row clearfix divRead">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        Yuuuu diliat data nya yuuuuu <b>[READ]</b> dan <b>[DELETE]</b>
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable" id="tblMstCar">
                            <thead>
                                <tr>
                                    <th>Action</th>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>IsActive</th>
                                    <th>CreatedDate</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row clearfix divUpdate">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Kalau mau edit jangan lupa diklik button edit dulu bro di table nya <b>[UPDATE]</b> </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action 1</a></li>
                                <li><a href="javascript:void(0);">Action 2 Kalo ada</a></li>
                                <li><a href="javascript:void(0);">Action 3 ya kalo ada juga, jangan dipaksain kalo nggak ada</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <form id="formUpdate">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="minmaxlength" id="txtEditAutoID" required readonly />
                            </div>
                            <div class="help-info">Ini ID nya bro. Readonly coiiii</div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="txtEditNama" type="text" class="form-control" name="minmaxlength" maxlength="10" minlength="3" required />
                            </div>
                            <div class="help-info">Nama Min. 3, Max. 10 characters</div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line" id="bs_datepicker_container">
                                <input type="text" class="form-control" name="date" id="txtEditDate" required />
                            </div>
                            <div class="help-info">Formatnya ini bro : YYYY-MM-DD</div>
                        </div>
                        <button class="btn btn-primary waves-effect" type="submit">Click button ini bro kalau mau save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.RenderFormat(Helper.GetDefaultJsStringFormat(), "~/Scripts/Home/mastercar2.js")
}