
@{
    ViewBag.Title = "MasterBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <h2>CRUD Master Camera</h2>
    <h4>Back End : REST API + .Net Core + SQL Server + Mongo DB + Dapper(ORM)</h4>
</div>


<div class="row clearfix divAdd">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2><b>[CREATE]</b></h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action 1</a></li>
                            <li><a href="javascript:void(0);">Action 2 Kalo ada</a></li>
                            <li><a href="javascript:void(0);">Action 3 ya kalo ada juga, jangan dipaksain kalo nggak ada</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form id="formAnjay" method="POST">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <p>
                                <b>Brand</b>
                            </p>
                            <select class="form-control show-tick" data-live-search="true" id="slBrand" required>
                            </select>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="txtCountry" required>
                            <label class="form-label">Country</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="number" class="form-control" id="txtRank" required>
                            <label class="form-label">Rank</label>
                        </div>
                    </div>
                    <button class="btn btn-primary waves-effect" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix divRead">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <b>[READ]</b> and <b>[DELETE]</b>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable" id="tblMstCamera">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>id</th>
                                <th>Brand</th>
                                <th>Country</th>
                                <th>Rank</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix divUpdate">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2><b>[UPDATE]</b></h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action 1</a></li>
                            <li><a href="javascript:void(0);">Action 2 Kalo ada</a></li>
                            <li><a href="javascript:void(0);">Action 3 ya kalo ada juga, jangan dipaksain kalo nggak ada</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form id="formUpdate">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="txtEditID" required readonly />
                        </div>
                        <div class="help-info">Readonly</div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <select class="form-control show-tick" data-live-search="true" id="slEditBrand" required></select>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id="txtEditCountry" type="text" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id="txtEditRank" type="text" class="form-control" required />
                        </div>
                    </div>
                    <button class="btn btn-primary waves-effect" type="submit">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.RenderFormat(Helper.GetDefaultJsStringFormat(), "~/Scripts/Home/mastercamera.js")
}

